<web-app xmlns="http://java.sun.com/xml/ns/javaee" xmlns:xsi="http://www.w3.org/2001/XMLSchema-instance"
	xsi:schemaLocation="http://java.sun.com/xml/ns/javaee 
	      http://java.sun.com/xml/ns/javaee/web-app_3_0.xsd"
	version="3.0">
	<description>SQRL Example App</description>

	<servlet>
		<description>AtmosphereServlet</description>
		<servlet-name>AtmosphereServlet</servlet-name>
		<servlet-class>org.atmosphere.cpr.AtmosphereServlet</servlet-class>
		<!-- Use it with mvn jetty:run <init-param> <param-name>org.atmosphere.cpr.packages</param-name> 
			<param-value>org.atmosphere.samples</param-value> </init-param> -->
		<load-on-startup>0</load-on-startup>
		<async-supported>true</async-supported>
	</servlet>
	<servlet-mapping>
		<servlet-name>AtmosphereServlet</servlet-name>
		<url-pattern>/sqrlauthwebsocket/*</url-pattern>
	</servlet-mapping>
	<listener>
		<!-- required for atmosphere session support -->
	    <listener-class>org.atmosphere.cpr.SessionSupport</listener-class>
	</listener>
	<context-param>
		<!-- required for atmosphere session support -->
	    <param-name>org.atmosphere.cpr.sessionSupport</param-name>
	    <param-value>true</param-value>
	</context-param>

	<session-config>
		<session-timeout>15</session-timeout>
	</session-config>
</web-app>