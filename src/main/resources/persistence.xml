<?xml version="1.0" encoding="UTF-8"?>
<persistence version="1.0"
	xmlns="http://java.sun.com/xml/ns/persistence">
	<!-- Our example app persistence unit -->
	<!-- The app DOES NOT have to use JPA, we do so here for convience -->
	<persistence-unit name="exampleapp-persistence"
		transaction-type="RESOURCE_LOCAL">
		<provider>org.eclipse.persistence.jpa.PersistenceProvider</provider>
		<class>com.github.dbadia.sqrl.server.example.data.AppUser</class>
		<properties>
			<property name="eclipselink.logging.level" value="WARNING" />
            <property name="eclipselink.ddl-generation" value="drop-and-create-tables" />
			<property name="javax.persistence.jdbc.driver" value="org.apache.derby.jdbc.EmbeddedDriver" />
			<property name="javax.persistence.jdbc.url" value="jdbc:derby:memory:sqrlexample;create=true" />
			<property name="javax.persistence.jdbc.user" value="" />
			<property name="javax.persistence.jdbc.password" value="" />
			<property name="javax.persistence.schema-generation.scripts.create-target" value="demoapp.ddl"/>		
		</properties>
	</persistence-unit>
	<!-- The java SQRL persistence unit -->
	<persistence-unit name="javasqrl-persistence"
		transaction-type="RESOURCE_LOCAL">
		<provider>org.eclipse.persistence.jpa.PersistenceProvider</provider>
		<class>com.github.dbadia.sqrl.server.data.SqrlIdentity</class>
		<class>com.github.dbadia.sqrl.server.data.SqrlCorrelator</class>
		<properties>
			<property name="eclipselink.logging.level" value="WARNING" />
			<property name="eclipselink.ddl-generation" value="drop-and-create-tables" />
			<property name="javax.persistence.jdbc.driver" value="org.apache.derby.jdbc.EmbeddedDriver" />
			<property name="javax.persistence.jdbc.url" value="jdbc:derby:memory:sqrlexample;create=true" />
			<property name="javax.persistence.jdbc.user" value="" />
			<property name="javax.persistence.jdbc.password" value="" />
		</properties>
	</persistence-unit>
</persistence>